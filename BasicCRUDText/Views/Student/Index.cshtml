@model IEnumerable<BasicCRUDText.Models.Student>

@{
    ViewData["Title"] = "List of Students";
}

<div class="container">
    <div class="row">
        <h3 class="text-center text-info">List of Students</h3>
        <div class="col-11"></div>
        <div class="col-1 mb-3">
            <a asp-action="Create" class="btn btn-sm btn-outline-info">Create</a>
        </div>
        <div>
            @if(Model.Count() > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Date of Birth</th>
                            <th>Department</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Gender</td>
                                <td>@item.DateOfBirth.ToString("dd-MM-yyyy")</td>
                                <td>@item.Department.DeptName</td>
                                <td>
                                    <a asp-action="Update" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-warning">Update</a>
                                    <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>